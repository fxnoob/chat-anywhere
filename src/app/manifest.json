{
  "name": "ChatEveryWhere",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Chat Every Where",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "background": {
    "scripts": ["background.bundle.js"]
  },
  "permissions": ["identity", "webNavigation", "*://*/*", "storage"],
  "browser_action": {
    "default_icon": {
      "19": "images/icon-19.png",
      "38": "images/icon-38.png"
    },
    "default_title": "Chat Every Where",
    "default_popup": "popup.html"
  },
  "oauth2": {
    "client_id": "546869382919-pbt4mo61j1m58ulj7nn82fjhloumi7mq.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/userinfo.profile"
    ]
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://www.gstatic.com/ https://*.firebaseio.com https://www.googleapis.com; object-src 'self'"
}
